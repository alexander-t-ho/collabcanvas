{
  "rules": {
    "presence": {
      "$canvasId": {
        ".read": "auth != null",
        "$userId": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "canvases": {
      "$canvasId": {
        "history": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "historyIndex": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}


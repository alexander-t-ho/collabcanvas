rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read all users but only write their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Canvas objects - authenticated users can create, read, update, and delete
    match /canvases/{canvasId}/objects/{objectId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Cursor positions - users can read all cursors, write their own, and delete any (for cleanup)
    match /canvases/{canvasId}/cursors/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null; // Allow any authenticated user to clean up stale cursors
    }
    
    // Chat messages - authenticated users can read and write
    match /canvases/{canvasId}/messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
